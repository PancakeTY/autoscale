<?xml version="1.0" encoding="UTF-8"?>

<parameters>
	
	<!-- Nimbus parameters -->
	<nimbus_host>roland-spg</nimbus_host>
	<nimbus_port>6627</nimbus_port>
	
	
	<!-- Monitoring parameters -->
	<monitoring_frequency>10</monitoring_frequency>
	<window_size>60</window_size>
	
	<!-- Detection parameters -->
	<alpha>0.01</alpha>
	<stability_threshold>0.1</stability_threshold>
	<high_activity_threshold>1</high_activity_threshold>
	
	<!-- Stability parameters -->
	<!-- The grace coefficient defines how many iterations are skipped after a scale-in/scale-out before triggering a new modification, per default 1 -->
	<grace_coeff>1</grace_coeff>
	<!-- This threshold defines an interval centered on 0 which discriminates slopes (computed through regression) considered as null from increasing or decreasing ones, per default its value is 0.1 -->
	<slope_threshold>0.1</slope_threshold>
	
	<!-- Database host -->
	<db_host>localhost</db_host>
	
	<!-- Database name, for reminder only MySQL databases are supported -->
	<db_name>autoscale_test</db_name>
	
	<!-- Database credentials -->
	<db_user>root</db_user>
	<db_password></db_password>
	
</parameters>