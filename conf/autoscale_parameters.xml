<?xml version="1.0" encoding="UTF-8"?>

<parameters>

	<!-- Monitoring parameters -->
	<monitoring_frequency>10</monitoring_frequency>
	<window_size>60</window_size>
	
	<!-- Activity delimiters -->
	<low_activity_threshold>0.4</low_activity_threshold>
	<high_activity_threshold>0.8</high_activity_threshold>
	
	<!-- Stability parameters -->
	
	<!-- The coefficient of stabilization defines how many windows are skipped after a scale-in/scale-out before triggering a new modification, per default 1 -->
	<stabilization_coeff>1</stabilization_coeff>
	<!-- This threshold defines an interval centered on 0 which discriminates slopes (computed thanks to regression) considered as null from increasing or decreasing ones, per default 0.1 -->
	<slope_threshold>0.1</slope_threshold>
	
	<!-- Database host, per default it is the nimbus.host value specified in storm.yaml -->
	<db_host>localhost</db_host>
	
	<!-- Database name, for reminder only MySQL databases are supported -->
	<db_name>autoscale</db_name>
	
	<!-- Database credentials -->
	<db_user>root</db_user>
	<db_password></db_password>
	
</parameters>